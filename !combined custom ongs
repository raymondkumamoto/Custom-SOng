define :drum do
  sample :bd_ada
  sleep 1
  sample :bd_ada
  sleep 1
  sample :bd_ada
  sleep 1
  sample :bd_ada
  sleep 0.5
  sample :bd_ada
  sleep 0.5
end

define :solodrum do
  4.times do
    sample :bd_ada
    sleep 1
  end
end

x=1
define :claps do
  8.times do
    sample clap, amp: x
    x=x+1
    sleep 1
  end
end

define :snare do
  2.times do
    sample :hat_zap, amp: 0.5
    sleep 2
  end
end

define :squeaks do
  4.times do
    sample squeak, amp: 2
    sleep 1
  end
end
#2nd song defines


define :pf do |o|
  sample :bd_ada
  sleep o
end

define :squeakks do
  4.times do
    sample squeakk, amp: 0.5
    sleep 1
  end
end
define :hat do
  2.times do
    4.times do
      sample :hat_bdu, amp: 0.3
      sleep 0.25
    end
    sample :hat_raw, amp: 0.3
    sleep 0.25
    3.times do
      sample :hat_bdu, amp: 0.3
      sleep 0.25
    end
  end
end


define :squeakkss do
  4.times do
    sample squeakk, amp: 0.1
    sleep 1
  end
end





