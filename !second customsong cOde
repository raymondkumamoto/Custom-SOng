squeak ="C:/Users/Raymond_Kumamoto/Downloads/Bling-Bang-Bang-BornREAL SQUEAK.wav"
squeakk ="C:/Users/Raymond_Kumamoto/Downloads/Bed Squeak Sample [Jersey Club  Future Bass].mp3"
VocalsPt1="C:/Users/Raymond_Kumamoto/Downloads/Flashbang Vocals PT1.mp3"
BassPt1="C:/Users/Raymond_Kumamoto/Downloads/Flashbang Bass PT1.mp3"
define :drum do
  sample :bd_ada
  sleep 1.5
  sample :bd_ada
  sleep 1
  sample :bd_ada
  sleep 1
  sample :bd_ada
  sleep 0.5
  sample :bd_ada
  sleep 0.5
end
define :squeaks do
  4.times do
    sample squeak, amp: 2
    sleep 1
  end
end
define :squeakks do
  4.times do
    sample squeakk, amp: 2
    sleep 1
  end
end
use_bpm 156
squeaks
use_bpm 85

x=0
squeakzzzz = [156,146,126,116,105,95,85]
7.times do
  4.times do
    use_bpm (squeakzzzz [x])
    sample squeak, amp: 2
    sleep 1
  end
  x=x+1
end


live_loop :ptonesqueaks do
  
  sample squeakk amp: 0.5
  sleep 1
end
sample VocalsPt1, amp: 1
7.times do
  drum
end
