define :squeaks do
  4.times do
    sample squeak, amp: 1
    sleep 1
  end
end
define :squeakks do
  4.times do
    sample squeakk, amp: 0.5
    sleep 1
  end
end
define :slowsqueakks do
  4.times do
    sample squeak, amp: 0.5, beat_stretch: 1.2
    sleep 1
  end
end
define :hat do
  16.times do
    4.times do
      sample :hat_bdu, amp: 0.3
      sleep 0.25
    end
    sample :hat_raw, amp: 0.3
    sleep 0.25
    3.times do
      sample :hat_bdu, amp: 0.3
      sleep 0.25
    end
  end
end




