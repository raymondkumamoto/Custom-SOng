#2nd song defines
define :pf do |o|
  sample :bd_ada
  sleep o
end

define :squeakks do
  4.times do
    sample squeakk, amp: 0.5
    sleep 1
  end
end
define :hat do
  2.times do
    4.times do
      sample :hat_bdu, amp: 0.3
      sleep 0.25
    end
    sample :hat_raw, amp: 0.3
    sleep 0.25
    3.times do
      sample :hat_bdu, amp: 0.3
      sleep 0.25
    end
  end
end


define :squeakkss do
  4.times do
    sample squeakk, amp: 0.1
    sleep 1
  end
end


use_bpm 156
squeaks
x=0
squeakzzzz = [156,146,126,116,105,95,85]
7.times do
  2.times do
    use_bpm (squeakzzzz [x])
    sample squeak, amp: 2
    sleep 1
  end
  x=x+1
end
sleep 0.25


2.times do
  squeakks
end

live_loop :ptonesqueaks do
  2.times do
    squeakks
  end
  sample VocalsPt2, amp: 1
  16.times do
    squeakks
  end
  stop
end
18.times do
  hat
end



sample toji, amp: 0.7
sleep 17



